{
  "name": "@squad/lib",
  "version": "0.1.0",
  "description": "Usful things for multiple workspaces",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "test": "yarn build && jest --collect-coverage",
    "build": "tsc --build"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^16.4.14",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "jest": "^27.0.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "dist/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 99,
        "statements": 99,
        "lines": 99,
        "functions": 99
      }
    },
    "displayName": "@squad/lib",
    "roots": ["dist"]
  }
}
